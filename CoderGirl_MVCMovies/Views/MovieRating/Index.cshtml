
@{
    ViewData["Title"] = "Movie Ratings";
}

<h1>Movies</h1>

<a asp-controller="MovieRating" asp-action="Create">Rate Another Movie</a>
@if (ViewBag.MovieRatings.Count == 0)
{
    <p>No Movie Ratings yet!</p>
}
else
{
    <table>

        <tr>
            <th>Movie</th>
            <th>Rating</th>
        </tr>
        @foreach (var movie in ViewBag.MovieRatings)
        {
            <tr>
                <td>@movie.Key</td>
                <td>@movie.Value</td>
            </tr>
        }

    </table>
}
