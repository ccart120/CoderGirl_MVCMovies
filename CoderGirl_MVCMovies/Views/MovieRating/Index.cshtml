@Model CoderGirl_MVCMovies.Models.MovieRating
@{
    ViewData["Title"] = "Movie Ratings";
}

<h1>Movie Ratings</h1>
<p><a asp-controller="MovieRating" asp-action="Create" asp-route-id="add-movierating">Rate a Movie</a></p>
<table>
    <tr>
        <th>Movie</th>
        <th>Rating</th>
    </tr>
    @foreach (MovieRating movieRating in Model)
    {
        @if (movieRating.Rating != null)
        {
    <tr>
        <td>@movieRating.MovieName</td>
        <td>@movieRating.Rating</td>
        <td><a asp-controller="MovieRating" asp-action="Edit" asp-route-id="@movieRating.Id">Edit</a></td>
        <td><a asp-controller="MovieRating" asp-action="Delete" asp-route-id="@movieRating.Id">Delete</a></td>
    </tr>
        }

    }
</table>
