@model List<CoderGirl_MVCMovies.Models.Movie>
@model List<CoderGirl_MVCMovies.Models.MovieRating>

@{
    ViewData["Title"] = "Movies";
}

<h1>Movies</h1>
<a asp-controller="Movie" asp-action="Create" asp-route-id="add-new-movie">Add New Movie</a>
<table>
    <tr>
        <th>Movie Name</th>
        <th>Director</th>
        <th>Year</th>
        <th>Average Rating</th>
        <th>Number of Ratings</th>
    </tr>
    @foreach (var movie in Model)
    {
    <tr>
        <td>@movie.Name</td>
        <td>@movie.DirectorName</td>
        <td>@movie.Year</td>
        <td>@movie.GetAverageRating</td>
        <td>@movie.GetNumberOfRatings</td>
        <td><a asp-controller="MovieRating" asp-action="Create" asp-route-id="@movie.Id">Rate</a></td>
        <td><a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Edit</a></td>
        <td><a asp-controller="Movie" asp-action="Delete" asp-route-id="movie.Id">Delete</a></td>
    </tr>
    }
</table>
