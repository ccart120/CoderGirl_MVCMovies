@model List<CoderGirl_MVCMovies.Models.Director>
@{
    ViewData["Title"] = "Directors";
}

<h1>Directors</h1>
<a asp-controller="Director" asp-action="Create" asp-route-id="add-new-director">Add a Director</a>

<table>
    <tr>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Nationality</th>
       
    </tr>
    @foreach (var director in ViewBag.Directors)
    {
        <tr id="{director id}">
            <td>@director.LastName,@director.FirstName</td>
            <td>@director.BirthDate</td>
            <td>@director.Nationality</td>

        </tr>
    }
</table>