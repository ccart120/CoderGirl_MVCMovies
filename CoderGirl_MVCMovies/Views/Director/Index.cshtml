@model List<CoderGirl_MVCMovies.Models.Director>
@{
    ViewData["Title"] = "Index";
}

<h1>Directors</h1>
<a asp-controller="Director" asp-action="Create" asp-route-id="add-new-director">Add a Director</a>

<table>
    <tr>
        <th>Name</th>
        <th>Birth Date</th>
        <th>Nationality</th>
       
    </tr>
    @foreach (var director in Model)
    {
        <tr id="{director id}">
            <td>@director.LastName,@director.FirstName</td>
            <td>@director.BirthDate</td>
            <td>@director.Nationality</td>

            <td><a asp-controller="MovieRating" asp-action="Create" asp-route-id="@movie.Id">Rate</a></td>
            <td><a asp-controller="Movie" asp-action="Edit" asp-route-id="@movie.Id">Edit</a></td>
            <td><a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id">Delete</a></td>

        </tr>
    }
</table>